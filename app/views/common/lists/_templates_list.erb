<h1>
  <%= list_caption_for ::Template %>

  <a href="<%= url_for :templates, :create %>" class="ui right floated green wide button" id="Create-Mail-Adapter">
    <i class="icon plus"></i><%= caption_for :create %>
  </a>
</h1>

<% if templates.empty? %>

  <div class="ui message">
    <div class="content">
      <p><%= message_for :empty, :models => ::Template %></p>
    </div>
  </div>

<% else %>

  <table class="ui selectable padded table">
    <thead>
      <tr>
        <th class="id-column"><%= caption_for :id %></th>
        <th><%= caption_for :name %></th>
      </tr>
    </thead>
    <tbody>
      <% for template in templates %>
        <tr>
          <td class="id-column"><%= template.id %></td>
          <td><a href="<%= url_for(:templates, :edit, template.id) %>"><%= template.name %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
