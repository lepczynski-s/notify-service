<h1>
  <%= list_caption_for ::Adapter %>

  <a href="<%= url_for :adapters, :create %>" class="ui right floated green wide button" id="Create-Mail-Adapter">
    <i class="icon plus"></i><%= caption_for :create %>
  </a>
</h1>

<% if adapters.empty? %>

  <div class="ui message">
    <div class="content">
      <p><%= message_for :empty, :models => ::Adapter %></p>
    </div>
  </div>

<% else %>

  <table class="ui selectable padded table">
    <thead>
      <tr>
        <th class="id-column"><%= caption_for :id %></th>
        <th><%= caption_for :name %></th>
      </tr>
    </thead>
    <tbody>
      <% for adapter in adapters %>
        <tr>
          <td class="id-column"><%= adapter.id %></td>
          <td><a href="<%= url_for(:adapters, :edit, adapter.id) %>"><%= adapter.name %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
