<h1>
  <%= list_caption_for ::Identity %>

  <a href="<%= url_for :identities, :create %>" class="ui right floated green wide button" id="Create-Identity">
    <i class="icon plus"></i><%= caption_for :create %>
  </a>
</h1>

<% if identities.empty? %>

  <div class="ui message">
    <div class="content">
      <p><%= message_for :empty, :models => ::Identity %></p>
    </div>
  </div>

<% else %>

  <table class="ui selectable padded table">
    <thead>
      <tr>
        <th class="id-column"><%= caption_for :id %></th>
        <th><%= caption_for :name %></th>
      </tr>
    </thead>
    <tbody>
      <% for identity in identities %>
        <tr>
          <td class="id-column"><%= identity.id %></td>
          <td><a href="<%= url_for(:identities, :edit, identity.id) %>"><%= identity.name %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
